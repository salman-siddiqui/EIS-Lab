/**
 * Export the index of vocabularies in the current Neologism instance in
 * 'application/rdf+xml' content type from a RDF model using the ADMS vocabulary.
 *
 * @param none
 * @return none
 */
function neologism_export_index_in_ADMS() {
  global $base_url;

  $required_namespaces = array($node->prefix, 'rdf', 'rdfs', 'dc', 'owl', 'foaf', 'xsd', 'vann',
    'adms', 'rad', 'dcterms', 'vcard'
  );

  // Set up model with all necessary namespaces
  $namespaces = rdf_get_namespaces();
  module_load_include('inc', 'neologism', 'neologism.rdfwriter');
  $rdf = new NeologismRDFWriter();
  foreach ($required_namespaces as $prefix) {
    $ns = $namespaces[$prefix];
    if (is_array($ns)) {
      $ns = $ns[0];
    }
    $rdf->register_namespace($prefix, $ns);
  }

  $doc = url($base_url);
  $rdf->triple_qname($doc, "rdf:type", "adms:SemanticAssetRepository");
  $rdf->triple_literal($doc, "dcterms:title", variable_get("site_name",""));
  $rdf->triple_literal($doc, "dcterms:description", variable_get("site_mission", ""));
  $creation_date = date('Y-m-d', variable_get("install_time", 0));
  $rdf->triple_literal($doc, "dcterms:created", $creation_date, 'xsd:date');
  $rdf->triple_literal($doc, "dcterms:modified", $creation_date, 'xsd:date');
  // this might be a new feature for Neologism, when in the admin panel
  // users could add a url of the current instance publisher.
  // $rdf->triple_uri($doc, "dcterms:publisher", );
  $rdf->triple_literal($doc, "adms:accessURL", $base_url);
  $rdf->triple_literal($doc, "adms:supportedSchema", "ADMS v1.0");
 	
  // Load vocabulary fields from DB
  $result = db_query('SELECT * FROM {neologism_vocabulary}');
  // var_dump($result);
  while ($vocab = db_fetch_object($result)) {
	$vocab_node = node_load($vocab->nid);
	$rdf->triple_uri($doc, "dcterms:hasPart", url($vocab_node->path, array('absolute' => true)));
	// append the vocabulary description without authors and afilliation 
	_neologism_append_rdf_vocab_description_in_ADMS($rdf, $vocab_node, FALSE);
  }

  drupal_set_header('Content-Type: application/rdf+xml');
  echo $rdf->write_rdfxml();
}