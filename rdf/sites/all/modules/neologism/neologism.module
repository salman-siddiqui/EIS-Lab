 * @param $new_qname
 *   A string with the new class/property qname value
 */
function _neologism_update_classes_and_properties_on_class_id_changed($previous_qname, $new_qname) {
	_neologism_update_evoc_field_references(EVOC_FIELDNAME_SUPERCLASSES, $previous_qname, $new_qname);
	_neologism_update_evoc_field_references(EVOC_FIELDNAME_DISJOINTWITH, $previous_qname, $new_qname);
	_neologism_update_evoc_field_references(EVOC_FIELDNAME_DOMAINS, $previous_qname, $new_qname);
	_neologism_update_evoc_field_references(EVOC_FIELDNAME_RANGES, $previous_qname, $new_qname);
}

/**
